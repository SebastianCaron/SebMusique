<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PlaylistActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fromdirstep2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="122dp"
            android:layout_height="67dp"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="Nom"
            android:textColor="@color/color_black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btpickfile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btFromdirSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="174dp"
            android:background="@drawable/shapesbt"
            android:backgroundTint="@color/blue"
            android:backgroundTintMode="src_over"
            android:text="Sauvegarder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NamePlaylist" />

        <EditText
            android:id="@+id/NamePlaylist"
            android:layout_width="228dp"
            android:layout_height="0dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="340dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/color_black"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/btFromdirSave"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="53dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Creer une Playlist"
            android:textColor="@color/color_black"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/NamePlaylist"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btpickfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="469dp"
            android:background="@drawable/shapesbt"
            android:backgroundTint="@color/blue"
            android:backgroundTintMode="src_in"
            android:text="Choisir un dossier"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/NamePlaylist"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fromscstep2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="170dp"
            android:layout_height="0dp"
            android:layout_marginEnd="158dp"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:text="Nom"
            android:textColor="@color/color_black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btpickfilesc"
            app:layout_constraintEnd_toEndOf="@+id/btpickfilesc"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <EditText
            android:id="@+id/NamescPlaylist"
            android:layout_width="228dp"
            android:layout_height="51dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/color_black"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btFromscSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"

            android:background="@drawable/shapesbt"
            android:backgroundTint="@color/blue"
            android:backgroundTintMode="src_over"
            android:text="Sauvegarder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listsonginplaylist" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Creer une Playlist"
            android:textColor="@color/color_black"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/textView10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btpickfilesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/shapesbt"
            android:backgroundTint="@color/blue"
            android:backgroundTintMode="src_in"
            android:text="Choisir un dossier"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/listsonginplaylist"
            app:layout_constraintEnd_toEndOf="@+id/NamescPlaylist"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <ListView
            android:id="@+id/listsonginplaylist"
            android:layout_width="393dp"
            android:layout_height="454dp"
            android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toTopOf="@+id/btFromscSave"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btpickfilesc" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fromScratch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="233dp"
            android:layout_height="0dp"
            android:layout_marginTop="278dp"
            android:layout_marginBottom="11dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Creer une nouvelle Playlist"
            android:textColor="@color/color_black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/btfromnothing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btfromnothing"
            android:layout_width="131dp"
            android:layout_height="0dp"
            android:layout_marginBottom="340dp"
            android:background="@drawable/shapesbt"
            android:backgroundTint="@color/blue"
            android:backgroundTintMode="src_over"
            android:text="Creer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fromdir"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btfromdir"
            android:layout_width="131dp"
            android:layout_height="0dp"
            android:layout_marginBottom="572dp"
            android:background="@drawable/shapesbt"
            android:backgroundTint="@color/blue"
            android:backgroundTintMode="src_over"
            android:text="Creer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="233dp"
            android:layout_height="0dp"
            android:layout_marginTop="41dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Creer une Playlist a partir d'un dossier"
            android:textColor="@color/color_black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/btfromdir"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>